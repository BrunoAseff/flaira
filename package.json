{
  "name": "flaira",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.6.3",
  "engines": {
    "node": "20.19.0",
    "pnpm": "10.6.3"
  },
  "scripts": {
    "dev": "pnpm run services:up && concurrently -n \"BACKEND,FRONTEND\" -c \"magenta,blue\" \"pnpm run dev:backend\" \"pnpm --filter @flaira/frontend run dev\"",
    "dev:backend": "dotenv -e .env.development -- pnpm --filter @flaira/backend run dev",
    "services:up": "docker compose up -d",
    "services:stop": "docker compose stop",
    "services:down": "docker compose down",
    "build": "pnpm -r run build",
    "start": "concurrently \"pnpm --filter backend run start\" \"pnpm --filter frontend run start\"",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "clean": "pnpm -r run clean",
    "check:updates": "npx npm-check-updates -i",
    "find:deadcode": "pnpm -r run find:deadcode"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "pino-pretty": "13.0.0",
    "turbo": "2.4.4",
    "typescript": "5",
    "vitest": "^3.1.1"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "sharp"
    ]
  }
}
